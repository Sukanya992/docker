pipeline {
    agent any
    environment {
        IMAGE_NAME = "flaskapp"
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/jenkins-docker-build.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }
        stage('List Docker Images') {
            steps {
                sh "docker images"
            }
        }
    }
}
