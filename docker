pipeline {
    agent any 
    stages {
        stage ('Pull image from Docker Hub') {
            steps {
                script {
                    def dockerImage = 'ubuntu'
                    sh "docker pull ${dockerImage}"
                    sh "docker images"
                }
            }                  
        }
        stage ('Run container') {
            steps {
                script {
                    sh "docker run --name ubuntu ubuntu"
                }
            }
        }
    }
}
